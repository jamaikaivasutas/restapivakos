<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.TextInputLayout;assembly=Syncfusion.Maui.Toolkit"
             xmlns:editors="clr-namespace:Syncfusion.Maui.Toolkit.NumericEntry;assembly=Syncfusion.Maui.Toolkit"
             xmlns:models="clr-namespace:Solution.Core.Models;assembly=Solution.Core"
             xmlns:viewModels="clr-namespace:Solution.DesktopApp.ViewModels"
             xmlns:behaviors="clr-namespace:Solution.DesktopApp.Behaviors"
             xmlns:validator="clr-namespace:Solution.Validators;assembly=Solution.Validators"
             x:DataType="viewModels:CreateOrEditChocolateViewModel"
             x:Class="Solution.DesktopApp.Views.CreateOrEditChocolateView"
             x:Name="this">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding AppearingCommand}" EventName="Appearing"/>
        <toolkit:EventToCommandBehavior Command="{Binding DisappearingCommand}" EventName="Disappearing"/>
    </ContentPage.Behaviors>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackLayout Orientation="Vertical" Grid.Column="0">
            <Label Text="{Binding Title}" Style="{StaticResource PageTitle}"/>

            <sf:SfTextInputLayout Hint="Brand"
                                  ContainerType="Outlined"
                                  OutlineCornerRadius="8"
                                  ErrorText="{
                                              Binding ValidationResult,
                                              Converter={StaticResource ValidationResultToErrorMessagesConverter},
                                              ConverterParameter={x:Static validator:ChocolateModelValidator.BrandProperty}
                                             }"
                                  HasError="{
                                              Binding ValidationResult,
                                              Converter={StaticResource ValidationResultToHasErrorConverter},
                                              ConverterParameter={x:Static validator:ChocolateModelValidator.BrandProperty}
                                            }">
                <Picker ItemsSource="{Binding Brands}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding Brand}">
                    <Picker.Behaviors>
                        <toolkit:EventToCommandBehavior EventName="SelectedIndexChanged"
                                                        BindingContext="{Binding Source={x:Reference this}, Path=BindingContext}"
                                                        Command="{Binding ValidateCommand}"
                                                        CommandParameter="{x:Static validator:ChocolateModelValidator.BrandProperty}"/>
                    </Picker.Behaviors>
                </Picker>
            </sf:SfTextInputLayout>

            <sf:SfTextInputLayout Hint="Flavor"
                                  ContainerType="Outlined"
                                  OutlineCornerRadius="8"
                                  ErrorText="{
                                               Binding ValidationResult,
                                               Converter={StaticResource ValidatioNResultToErrorMessageConverter},
                                               ConverterParameter={x:Static validator:ChocolateModelValidator.FlavorProperty}
                                             }"
                                 HasError="{
                                               Binding ValidationResult,
                                               Converter={StaticResource ValidationResultToHasErrorConverter},
                                               ConverterParameter={x:Static validator:ChocolateModelValidator.FlavorProperty}
                                            }">

                <Entry Text="{Binding Flavor}">
                    <Entry.Behaviors>
                        <toolkit:EventToCommandBehavior EventName="TextChanged"
                                            BindingContext="{Binding Source={x:Reference this}, Path=BindingContext}"
                                            Command="{Binding ValidateCommand}"
                                            CommandParameter="{x:Static validator:ChocolateModelValidator.FlavorProperty}"/>
                    </Entry.Behaviors>
                </Entry>

            </sf:SfTextInputLayout>

            <sf:SfTextInputLayout Hint="Price"
                                  ContainerType="Outlined"
                                  OutlineCornerRadius="8"
                                  ErrorText="{
                                              Binding ValidationResult,
                                              Converter={StaticResource ValidatioNResultToErrorMessageConverter},
                                              ConverterParameter={x:Static validator:ChocolateModelValidator.PriceProperty}
                                             }"
                                  HasError="{
                                             Binding ValidationResult,
                                             Converter={StaticResource ValidationResultToHasErrorConverter},
                                             ConverterParameter={x:Static validator:ChocolateModelValidator.PriceProperty}
                                            }">

                <editors:SfNumericEntry
                    Value="{Binding Price}"
                    ShowClearButton="True"
                    CustomFormat="N0">
                    <editors:SfNumericEntry.Behaviors>
                        <toolkit:EventToCommandBehavior EventName="ValueChanged"
                                        BindingContext="{Binding Source={x:Reference this}, Path=BindingContext}"
                                        Command="{Binding ValidateCommand}"
                                        CommandParameter="{x:Static validator:ChocolateModelValidator.PriceProperty}"/>
                    </editors:SfNumericEntry.Behaviors>

                </editors:SfNumericEntry>
            </sf:SfTextInputLayout>

            <VerticalStackLayout Style="{StaticResource FormLineContainer}">
                <Button Text="Submit" Command="{Binding SubmitCommand}"  WidthRequest="250"/>
            </VerticalStackLayout>
        </StackLayout>
    </Grid>
</ContentPage>
